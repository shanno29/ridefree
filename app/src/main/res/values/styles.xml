<resources>

    <style name="RideFreeTheme" parent="Theme.AppCompat.Light.NoActionBar">
      <item name="colorPrimary">@color/primary</item>
      <item name="colorPrimaryDark">@color/primary_dark</item>
      <item name="colorAccent">@color/accent</item>
      <item name="android:navigationBarColor">@color/primary_dark</item>
      <item name="android:displayOptions">disableHome</item>
    </style>

    <style name="TextLabel">
        <!--<item name="android:textSize">10sp</item>-->
    </style>

  <style name="EditTextLayout" parent="TextAppearance.Design.Hint">
    <item name="android:textSize">20sp</item>
  </style>


  <style name="CardViewStyle" parent="CardView">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:layout_margin">@dimen/app_margin</item>
        <item name="cardElevation">@dimen/default_elevation</item>
    </style>

    <style name="RecyclerViewStyle">
        <item name="android:background">@color/background_light</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:text">"Default Title Text"</item>
        <item name="android:layout_margin">@dimen/app_margin</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ContentTextStyle">
        <item name="android:text">"Default Content Text"</item>
        <item name="android:layout_margin">@dimen/app_margin</item>
        <item name="android:textSize">@dimen/content_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
    </style>

  <style name="BetterTheme" parent="Theme.AppCompat.NoActionBar">
    <item name="colorPrimary">@color/primary_dark</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/colorPrimaryDark</item>
  </style>


</resources>
